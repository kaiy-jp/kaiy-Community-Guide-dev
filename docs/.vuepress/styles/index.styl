.content
  blockquote {
    color: #575757;
    border-left-color: #bbc3d1;
    background: #f5f5f5;
  }

#app .home .hero img
  width: 300px;
  margin: 0 auto;

.theme-default-content:not(.custom) {
  & > h1, h2, h3, h4, h5, h6 {
    margin-left: -1rem;
  }
}

body
  min-height: 100vh;
  font-family: BlinkMacSystemFont;
  position relative

html
  &::-webkit-scrollbar
    width: 8px;

  &::-webkit-scrollbar-track
    border-radius: 5px;
    border: none;
    background-color: $backgroundColor;

  &::-webkit-scrollbar-thumb
    border-radius: 5px;
    background: rgba(white, 0.3)

h1,h2,h3
  color: #fff;

a
  color: #63636e;

html,body,.sidebar,.navbar
  background-color: $backgroundColor;

.sidebar-heading > span
  color: #fff;

.home .hero .action-button
  border-radius: 5%;
  background: $backgroundColor !important;
  box-shadow:  7px 7px 8px #0f0f13, -7px -7px 8px #1f1f27;
  border: none !important;

.navbar .links
  background-color: $backgroundColor !important;
  color: #fff;

.nav-links a:hover
  color: #fff !important;

.site-name.can-hide
  color: #fff !important;

.theme-default-content:not(.custom) a:hover
  text-decoration: underline;
  color: #fff;

.home
  background: $backgroundColor !important;
  margin: auto !important;
  max-width: none !important;
  padding: 3.6rem 0 0 !important;

.home .footer
  border none !important;
  position: relative;
  z-index: 0;
  background: #000;

.search-box input {
  background: #eee url(/assets/img/search.83621669.svg) 0.6rem 0.5rem no-repeat;
}
